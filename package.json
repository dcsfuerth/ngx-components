{
  "name": "@dcs/ngx-lib-starter",
  "version": "1.0.2",
  "description": "Starting point for creating a npm package, including angular build support.",
  "main": "bundles/ngx-lib-starter.umd.js",
  "module": "@dcs/ngx-lib-starter/ngx-lib-starter.es5.js",
  "es2015": "@dcs/ngx-lib-starter/ngx-lib-starter.js",
  "typings": "index.d.ts",
  "scripts": {
    "clean:build": "rimraf build .rpt2_cache coverage report docs",
    "build:copy": "cpy 'src/**/*.*' 'index.ts' 'build/tmp' --parents",
    "build:package-json": "ngx-build-package-json -s package.json -d build/package.json",
    "build:inline": "ngx-inline-styles --cssGlob 'build/tmp/src/**/*.scss' --componentsGlob 'build/tmp/src/**/*.component.ts' --postcssConfig config/postcss.config.js",
    "build:aot:es2015": "ngc -p tsconfig.es2015.json",
    "build:aot:es5": "ngc -p tsconfig.es5.json",
    "build:aot": "run-s build:aot:es2015 build:aot:es5",
    "build:rollup": "rollup -c config/rollup.build.config.js",
    "build:cleanup": "rimraf 'build/tmp' 'build/src/**/*.html' 'build/src/**/*.scss' 'build/src/**/*.js' 'build/src/**/*.js.map' 'build/*.js' 'build/*.js.map'",
    "build": "run-s clean:build lint test:coverage build:copy build:package-json build:inline build:aot build:rollup build:cleanup docs",
    "build:watch": "ngx-build-watch -c config/rollup.dev.config.js -t src --cache",
    "build:dev:copy": "cpy index.ts build",
    "watch": "run-s clean:build build:dev:copy build:package-json build:watch",
    "test": "mocha --opts mocha.opts",
    "test:watch": "npm run test -- --watch",
    "test:coverage:run": "cross-env NODE_ENV=test nyc --extension .ts npm run test",
    "test:coverage:check": "nyc check-coverage --statements 95 --branches 95 --functions 95 --lines 95",
    "test:coverage": "run-s test:coverage:run test:coverage:check",
    "lint": "tslint --project tsconfig.json --type-check",
    "docs": "typedoc --out docs --excludeExternals --ignoreCompilerErrors --includeDeclarations --target ES6 --exclude '**/*.spec.ts' --mode file ./src",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git cz",
    "commitmsg": "validate-commit-msg",
    "precommit": "run-s lint",
    "prepush": "npm run build",
    "version": "run-s build changelog && git add CHANGELOG.md",
    "postversion": "git push --no-verify && git push --no-verify --tags"
  },
  "keywords": [
    "npm",
    "rollup",
    "angular",
    "typescript"
  ],
  "author": "Marc Remolt <marc.remolt@dcs-fuerth.de>",
  "license": "ISC",
  "repository": "dcsfuerth/ngx-lib-starter",
  "devDependencies": {
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@dcs/ngx-build-tools": "^1.3.0",
    "@types/chai": "^4.0.0",
    "@types/lorem-ipsum": "^1.0.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.1",
    "autoprefixer": "^7.1.1",
    "chai": "^4.0.2",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.1",
    "core-js": "^2.4.1",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.0.1",
    "crypto": "0.0.3",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.0",
    "jsdom": "^11.0.0",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.2",
    "postcss": "^6.0.2",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-angular": "^0.4.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.4.4",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-plugin-visualizer": "^0.3.1",
    "rxjs": "^5.4.1",
    "ts-node": "^3.1.0",
    "tslib": "^1.7.1",
    "typedoc": "^0.7.1",
    "typescript": "2.3.4",
    "uglify-es": "^3.0.19",
    "validate-commit-msg": "^2.12.2",
    "zone.js": "^0.8.12"
  },
  "peerDependencies": {
    "@angular/core": "^4.2.4",
    "@angular/common": "^4.2.4",
    "rxjs": "^5.4.1"
  },
  "dependencies": {
    "codelyzer": "^3.1.1",
    "lorem-ipsum": "^1.0.4",
    "tslint": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
