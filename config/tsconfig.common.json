{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "lib": ["dom", "es2015", "dom.iterable", "scripthost"],
    "types": ["node", "jasmine"],
    "typeRoots": ["node_modules/@types"]
  }
}
